@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section>
    <div class="row d-flex justify-content-center col-12">
        <div class="col-sm-10 col-md-6 col-lg-4 rounded m-24">
            <form id="account" method="post" class="py-5">
                <div class="d-flex justify-content-center">
                    <i class="fa fa-unlock-alt text-success sign-in-icon"></i>
                </div>
                <div class="d-flex justify-content-center">
                    <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email address" required autofocus />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-success btn-block">Log in</button>
                </div>
                <div class="form-group">
                    <div class="row col-12">
                        <p class="col-12">
                            <a class="text text-bottom" style="margin-left:4%" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            <a class="text text-bottom" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>

                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </form>
        </div>
    </div>
</section>

<style>
    .form-control:focus {
        border-color: #ec1c24 !important;
        box-shadow: 0 0 2px rgb(236, 28, 36) !important;
    }

    .sign-in-icon {
        font-size: 50px;
    }

    .btn-success {
        background-color: #ec1c24 !important;
    }

    .text-success {
        color: #ec1c24 !important;
    }
    .text-bottom {
        color: #ec1c24 !important;

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


